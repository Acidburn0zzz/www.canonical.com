#! /usr/bin/env bash

set -e

RUN_COMMAND="talisker.gunicorn webapp.wsgi --bind $1 --worker-class sync --workers 5 --name talisker-`hostname`"

if [ "${DJANGO_DEBUG}" = true ] || [ "${DJANGO_DEBUG}" = 1 ]; then
    RUN_COMMAND="${RUN_COMMAND} --reload --log-level debug --timeout 9999"
fi

${RUN_COMMAND}
